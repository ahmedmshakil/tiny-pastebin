{{define "index-body"}}
  <section class="card">
    <h2>Create a paste</h2>
    {{if .Error}}
      <p class="flash flash-error">{{.Error}}</p>
    {{end}}
    <form method="post" action="/pastes" class="form">
      <label for="content">Content <span class="muted">(max {{.MaxBytes}} bytes)</span></label>
      <textarea id="content" name="content" rows="14" required>{{.Content}}</textarea>

      <div class="form-row">
        <label for="syntax">Syntax</label>
        <select id="syntax" name="syntax">
          {{range .SyntaxOptions}}
            <option value="{{.Value}}" {{if .Selected}}selected{{end}}>{{.Label}}</option>
          {{end}}
        </select>
      </div>

      <div class="form-row">
        <label for="expire">Expires</label>
        <select id="expire" name="expire">
          {{range .ExpireOptions}}
            <option value="{{.Value}}" {{if .Selected}}selected{{end}}>{{.Label}}</option>
          {{end}}
        </select>
      </div>

      <label for="password">Password <span class="muted">(optional)</span></label>
      <input id="password" name="password" type="password" autocomplete="off" placeholder="Enter password">

      <button type="submit" class="btn">Create paste</button>
    </form>
  </section>
{{end}}
