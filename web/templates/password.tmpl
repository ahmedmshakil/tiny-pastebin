{{define "password-body"}}
  <div class="password-container">
    <div class="password-card">
      <div class="password-header">
        <h2 class="password-title">Protected Paste</h2>
        <p class="password-subtitle">This paste is password protected. Enter the password to view its content.</p>
      </div>

      {{if .Error}}
        <div class="alert alert-error">
          <span class="alert-message">{{.Error}}</span>
        </div>
      {{end}}

      <form method="post" action="/p/{{.ID}}" class="password-form" id="password-form">
        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            class="password-input"
            required 
            autofocus 
            placeholder="Enter password to unlock this paste"
            autocomplete="current-password">
        </div>
        
        <div class="password-actions">
          <button type="submit" class="btn btn-primary unlock-btn">
            Unlock Paste
          </button>
          <a href="/" class="btn btn-secondary">
            Go Home
          </a>
        </div>
      </form>
      
      <div class="password-info">
        <div class="info-item">
          <span class="info-text">Paste ID: <code class="paste-id">{{.ID}}</code></span>
        </div>
        <div class="info-item">
          <span class="info-text">This paste is encrypted and secure</span>
        </div>
      </div>
    </div>
  </div>

  <style>
    .password-container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 60vh;
      animation: slideUp 0.6s ease-out;
    }

    .password-card {
      background: var(--bg-elevated);
      border: 1px solid var(--border-primary);
      border-radius: var(--radius-xl);
      padding: var(--space-xxl);
      box-shadow: var(--shadow-xl);
      width: min(480px, 90vw);
      text-align: center;
    }

    .password-header {
      margin-bottom: var(--space-xl);
    }

    .password-title {
      font-size: 1.75rem;
      font-weight: 700;
      margin: 0 0 var(--space-sm);
      color: var(--text-primary);
    }

    .password-subtitle {
      color: var(--text-secondary);
      margin: 0;
      line-height: 1.5;
    }

    .password-form {
      display: flex;
      flex-direction: column;
      gap: var(--space-lg);
      margin-bottom: var(--space-xl);
    }

    .password-input {
      padding: var(--space-xl);
      border: 2px solid var(--border-primary);
      border-radius: var(--radius-md);
      background: var(--bg-secondary);
      color: var(--text-primary);
      font-size: 1.25rem;
      text-align: center;
      transition: all var(--transition-fast);
      height: 70px;
      width: 100%;
    }

    .password-input:focus {
      outline: none;
      border-color: var(--accent-primary);
      box-shadow: 0 0 0 3px var(--accent-light);
    }

    .password-actions {
      display: flex;
      gap: var(--space-md);
      justify-content: center;
    }

    @media (max-width: 480px) {
      .password-actions {
        flex-direction: column;
      }
    }

    .unlock-btn {
      min-width: 140px;
    }

    .password-info {
      display: flex;
      flex-direction: column;
      gap: var(--space-sm);
      padding-top: var(--space-lg);
      border-top: 1px solid var(--border-primary);
    }

    .info-item {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-sm);
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .info-text {
      display: flex;
      align-items: center;
      gap: var(--space-xs);
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('password-form');
      const submitBtn = form.querySelector('.unlock-btn');
      const passwordInput = document.getElementById('password');

      // Form submission with loading state
      form.addEventListener('submit', () => {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Unlocking...';
      });

      // Auto-focus and select on load
      passwordInput.focus();
      passwordInput.select();

      // Enter key handling
      passwordInput.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
          form.submit();
        }
      });
    });
  </script>
{{end}}
